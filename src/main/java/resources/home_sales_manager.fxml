<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="800.0" prefHeight="600.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.s4e2.ouatelse.controllers.HomeSalesManagerController">
    <top>
        <MenuBar fx:id="menuBar" stylesheets="@css/base.css" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Fichier">
                    <items>
                        <MenuItem id="menuBarFilePreferences" mnemonicParsing="false" onAction="#onPreferences"
                                  text="Préférences"/>
                        <MenuItem id="menuBarFileQuit" mnemonicParsing="false" onAction="#onQuit" text="Quitter"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Aide">
                    <items>
                        <MenuItem id="menuBarHelpAbout" mnemonicParsing="false" onAction="#onAbout" text="À propos"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" styleClass="footer">
            <children>
                <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0"
                       text="Copyright © Ouatelse. All rights reserved." textFill="WHITE" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS"/>
                <Label maxWidth="-1.0" text="Version ${project.version}" textFill="WHITE" HBox.hgrow="NEVER"/>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
    </bottom>
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="353.0" prefWidth="175.0" styleClass="left-container"
              BorderPane.alignment="CENTER">
            <children>
                <JFXButton contentDisplay="TOP" onMouseClicked="#onProductsButtonClick" prefHeight="1000.0"
                           prefWidth="1000.0" text="Produits" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <graphic>
                        <FontAwesomeIconView fill="RED" glyphName="COFFEE" size="30.0"/>
                    </graphic>
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
                <JFXButton contentDisplay="TOP" onMouseClicked="#onClientsButtonClick" prefHeight="1000.0"
                           prefWidth="1000.0" text="Clients" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <graphic>
                        <FontAwesomeIconView fill="RED" glyphName="USERS" size="30.0"/>
                    </graphic>
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
                <JFXButton contentDisplay="TOP" onMouseClicked="#onSalesStatisticsButtonClick" prefHeight="1000.0"
                           prefWidth="1000.0" text="Statistiques Ventes" textAlignment="CENTER" textFill="WHITE"
                           wrapText="true">
                    <graphic>
                        <FontAwesomeIconView fill="RED" glyphName="MONEY" size="30.0"/>
                    </graphic>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </JFXButton>
                <JFXButton contentDisplay="TOP" onMouseClicked="#onParametersButtonClick" prefHeight="1000.0"
                           prefWidth="1000.0" text="Paramètres" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <graphic>
                        <FontAwesomeIconView fill="RED" glyphName="COGS" size="30.0"/>
                    </graphic>
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
            </children>
        </VBox>
    </left>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
            <children>
                <Pane prefHeight="10000.0" prefWidth="175.0" styleClass="right-container"/>
                <JFXButton onMouseClicked="#onDisconnectClick" prefWidth="1000.0"
                           style="-fx-background-color: red; -fx-border-color: red;" text="Déconnexion"
                           textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="SIGN_OUT" size="18.0"/>
                    </graphic>
                    <font>
                        <Font size="16.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
            </children>
        </VBox>
    </right>
    <center>
        <GridPane alignment="CENTER" styleClass="content" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="154.0" minWidth="10.0" prefWidth="57.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="342.0" minWidth="10.0"
                                   prefWidth="342.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="121.0" minWidth="10.0" prefWidth="49.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="103.0" minHeight="10.0" prefHeight="102.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="270.0" minHeight="10.0" prefHeight="190.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="283.0" minHeight="10.0" prefHeight="260.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="10000.0" text="Accueil"
                       textAlignment="CENTER" textFill="WHITE" wrapText="true" GridPane.columnIndex="1">
                    <font>
                        <Font size="32.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                           GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <image>
                        <Image url="@images/ouatelse_icon.png"/>
                    </image>
                </ImageView>
                <Circle fill="WHITE" opacity="0.45" radius="93.0" stroke="BLACK" GridPane.columnIndex="1"
                        GridPane.rowIndex="1"/>
                <Pane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-10.0" layoutY="14.0"
                               prefHeight="35.0" prefWidth="363.0" text="Responsable des ventes" textAlignment="CENTER"
                               textFill="WHITE" wrapText="true">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Label id="homeAdminName" fx:id="homeAdminName" alignment="CENTER" contentDisplay="CENTER"
                               layoutX="-4.0" layoutY="75.0" prefHeight="30.0" prefWidth="351.0" text="{{name}}"
                               textAlignment="CENTER" textFill="WHITE" wrapText="true">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                        <Label id="homeAdminEmail" fx:id="homeAdminEmail" alignment="CENTER" contentDisplay="CENTER"
                               layoutX="-3.0" layoutY="130.0" prefHeight="30.0" prefWidth="350.0" text="{{email}}"
                               textAlignment="CENTER" textFill="WHITE" wrapText="true">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children>
        </GridPane>
    </center>
    <stylesheets>
        <URL value="@css/base.css"/>
        <URL value="@css/home.css"/>
    </stylesheets>
</BorderPane>

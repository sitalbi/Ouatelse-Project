<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="baseBorderPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/15.0.1"
            fx:controller="fr.s4e2.ouatelse.controllers.ManagementClientController">
    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="Fichier">
                <MenuItem id="menuBarFilePreferences" mnemonicParsing="false" onAction="#onPreferences"
                          text="Préférences"/>
                <MenuItem id="menuBarFileQuit" mnemonicParsing="false" onAction="#onQuit" text="Quitter"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Aide">
                <MenuItem id="menuBarHelpAbout" mnemonicParsing="false" onAction="#onAbout" text="À propos"/>
            </Menu>
        </MenuBar>
    </top>
    <bottom>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" styleClass="footer">
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
            <Label maxHeight="1.7976931348623157E308" text="Copyright © Ouatelse. All rights reserved." HBox.hgrow="ALWAYS">
                <font>
                    <Font size="11.0" fx:id="x3" />
                </font>
                <textFill>
                    <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
                </textFill>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Label font="$x3" text="Version ${project.version}" textFill="$x4" HBox.hgrow="NEVER" />
        </HBox>
    </bottom>
    <center>
        <BorderPane prefHeight="549.0" prefWidth="482.0" styleClass="content" BorderPane.alignment="CENTER">
            <top>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="798.0" BorderPane.alignment="CENTER">
                    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="47.0" prefWidth="405.0" text="Gestion des Clients" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                        <font>
                            <Font size="32.0" />
                        </font>
                    </Label>
                </HBox>
            </top>
            <center>
                <GridPane prefHeight="417.0" prefWidth="417.0" styleClass="user-table-pane" BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <BorderPane.margin>
                        <Insets bottom="20.0" right="20.0" top="20.0" />
                    </BorderPane.margin>
                    <JFXTreeTableView fx:id="clientTreeTableView" GridPane.columnSpan="3" GridPane.rowSpan="2">
                        <columnResizePolicy>
                            <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <GridPane.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </GridPane.margin>
                    </JFXTreeTableView>
                </GridPane>
            </center>
            <left>
                <GridPane hgap="10.0" prefHeight="432.0" prefWidth="330.0" style="-fx-background-color: #2f3b52;"
                          vgap="5.0" BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="175.0" minWidth="10.0" prefWidth="175.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="200.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <padding>
                        <Insets bottom="15.0"/>
                    </padding>
                    <JFXComboBox fx:id="clientCivilityDropdown" focusColor="RED" prefHeight="25.0" prefWidth="141.0"
                                 promptText="Civilité" unFocusColor="WHITE" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets left="15.0"/>
                        </GridPane.margin>
                    </JFXComboBox>
                    <JFXTextField fx:id="clientLastNameInput" focusColor="RED" promptText="Nom" unFocusColor="WHITE"
                                  GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets left="15.0"/>
                        </GridPane.margin>
                    </JFXTextField>
                    <JFXTextField fx:id="clientFirstNameInput" focusColor="RED" promptText="Prénom" unFocusColor="WHITE"
                                  GridPane.rowIndex="3">
                        <GridPane.margin>
                            <Insets left="15.0"/>
                        </GridPane.margin>
                    </JFXTextField>
                    <JFXTextField fx:id="clientEmailInput" focusColor="RED" promptText="Email" unFocusColor="WHITE"
                                  GridPane.rowIndex="4">
                        <GridPane.margin>
                            <Insets left="15.0"/>
                        </GridPane.margin>
                    </JFXTextField>
                    <JFXTextField fx:id="clientPhoneInput" focusColor="RED" promptText="Téléphone" unFocusColor="WHITE"
                                  GridPane.rowIndex="5">
                        <GridPane.margin>
                            <Insets left="15.0"/>
                        </GridPane.margin>
                    </JFXTextField>
                    <JFXTextField fx:id="clientAddressInput" focusColor="RED" promptText="Adresse" unFocusColor="WHITE"
                                  GridPane.rowIndex="6">
                        <GridPane.margin>
                            <Insets left="15.0"/>
                        </GridPane.margin>
                    </JFXTextField>
                    <JFXTextField fx:id="clientCityInput" focusColor="RED" promptText="Ville" unFocusColor="WHITE"
                                  GridPane.rowIndex="7">
                        <GridPane.margin>
                            <Insets left="15.0"/>
                        </GridPane.margin>
                    </JFXTextField>
                    <JFXTextField fx:id="clientZipInput" focusColor="RED" promptText="Code Postal" unFocusColor="WHITE"
                                  GridPane.rowIndex="8">
                        <GridPane.margin>
                            <Insets left="15.0"/>
                        </GridPane.margin>
                    </JFXTextField>
                    <JFXDatePicker fx:id="clientBirthDate" defaultColor="RED" promptText="Date de naissance"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets/>
                        </GridPane.margin>
                    </JFXDatePicker>
                    <JFXButton onMouseClicked="#onConfirmButtonClick" prefHeight="25.0" prefWidth="110.0"
                               style="-fx-background-color: red;" text="Confirmer" textAlignment="CENTER"
                               textFill="WHITE" wrapText="true" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                               GridPane.rowIndex="10">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="CHECK"/>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </JFXButton>
                    <JFXButton onMouseClicked="#onDeleteButtonClick" prefHeight="25.0" prefWidth="110.0"
                               style="-fx-background-color: red;" text="Supprimer" textAlignment="CENTER"
                               textFill="WHITE" wrapText="true" GridPane.halignment="CENTER" GridPane.rowIndex="10">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="REMOVE"/>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </JFXButton>
                    <JFXTextField fx:id="clientFaxInput" focusColor="RED" promptText="Fax" unFocusColor="WHITE"
                                  GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets right="20.0"/>
                        </GridPane.margin>
                    </JFXTextField>
                    <Label fx:id="errorMessage" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0"
                           prefWidth="221.0" text=" " textAlignment="CENTER" textFill="RED" wrapText="true"
                           GridPane.columnSpan="2" GridPane.halignment="CENTER">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                    <JFXTextArea fx:id="clientDetailsInput" focusColor="RED" promptText="Détails" unFocusColor="WHITE"
                                 wrapText="true" GridPane.columnSpan="2" GridPane.halignment="CENTER"
                                 GridPane.rowIndex="9">
                        <GridPane.margin>
                            <Insets left="15.0" right="15.0"/>
                        </GridPane.margin>
                    </JFXTextArea>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
                    </BorderPane.margin>
                </GridPane>
            </left>
        </BorderPane>
    </center>
    <stylesheets>
        <URL value="@../css/base.css" />
        <URL value="@../css/management.css" />
    </stylesheets>
</BorderPane>

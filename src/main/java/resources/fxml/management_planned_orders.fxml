<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="baseBorderPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/base.css"
            xmlns="http://javafx.com/javafx/15.0.1" fx:controller="fr.s4e2.ouatelse.controllers.BaseController">
    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="Fichier">
                <MenuItem id="menuBarFilePreferences" mnemonicParsing="false" onAction="#onPreferences"
                          text="Préférences"/>
                <MenuItem id="menuBarFileQuit" mnemonicParsing="false" onAction="#onQuit" text="Quitter"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Aide">
                <MenuItem id="menuBarHelpAbout" mnemonicParsing="false" onAction="#onAbout" text="À propos"/>
            </Menu>
        </MenuBar>
    </top>
    <bottom>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" styleClass="footer">
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
            <Label maxHeight="1.7976931348623157E308" text="Copyright © Ouatelse. All rights reserved."
                   HBox.hgrow="ALWAYS">
                <font>
                    <Font size="11.0" fx:id="x3"/>
                </font>
                <textFill>
                    <Color red="0.625" green="0.625" blue="0.625" fx:id="x4"/>
                </textFill>
            </Label>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label font="$x3" text="Version ${project.version}" textFill="$x4" HBox.hgrow="NEVER"/>
        </HBox>
    </bottom>
    <center>
        <GridPane styleClass="content" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0" GridPane.halignment="CENTER" GridPane.valignment="CENTER"
                      GridPane.vgrow="ALWAYS">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Programmation des commandes"
                               textAlignment="CENTER" textFill="WHITE" wrapText="true">
                            <font>
                                <Font size="32.0"/>
                            </font>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="498.0">
                            <children>
                                <JFXTextField alignment="CENTER" focusColor="RED" promptText="Rechercher"
                                              unFocusColor="WHITE">
                                    <padding>
                                        <Insets bottom="5.0"/>
                                    </padding>
                                </JFXTextField>
                                <JFXButton text=" ">
                                    <graphic>
                                        <FontAwesomeIconView fill="RED" glyphName="SEARCH" size="14.0"
                                                             textAlignment="CENTER"/>
                                    </graphic>
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                </JFXButton>
                            </children>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </HBox>
                        <JFXTreeTableView prefHeight="130.0" prefWidth="498.0" VBox.vgrow="ALWAYS"/>
                    </children>
                    <GridPane.margin>
                        <Insets left="50.0" right="50.0"/>
                    </GridPane.margin>
                </VBox>
                <GridPane style="-fx-background-color: #2f3b52;" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <GridPane.margin>
                        <Insets left="50.0" right="50.0"/>
                    </GridPane.margin>
                    <children>
                        <Label text="Référence article" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets left="25.0" right="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <JFXTextField disable="true" focusColor="RED" promptText="N/A" unFocusColor="WHITE"
                                      GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS">
                            <GridPane.margin>
                                <Insets right="25.0"/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </JFXTextField>
                        <Label text="Date" textAlignment="CENTER" textFill="WHITE" wrapText="true"
                               GridPane.rowIndex="1">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets left="25.0" right="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <JFXTextField disable="true" focusColor="RED" promptText="N/A" unFocusColor="WHITE"
                                      GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS"
                                      GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets right="25.0"/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </JFXTextField>
                        <Label text="Quantité" textAlignment="CENTER" textFill="WHITE" wrapText="true"
                               GridPane.rowIndex="2">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets left="25.0" right="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <JFXTextField disable="true" focusColor="RED" promptText="N/A" unFocusColor="WHITE"
                                      GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS"
                                      GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets right="25.0"/>
                            </GridPane.margin>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </JFXTextField>
                    </children>
                </GridPane>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.halignment="CENTER"
                      GridPane.hgrow="ALWAYS" GridPane.rowIndex="2">
                    <children>
                        <Button mnemonicParsing="false" style="-fx-background-color: red;" text="Valider la commande"
                                textAlignment="CENTER" textFill="WHITE" wrapText="true">
                            <graphic>
                                <FontAwesomeIconView fill="WHITE" glyphName="PLUS"/>
                            </graphic>
                            <HBox.margin>
                                <Insets right="15.0"/>
                            </HBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" style="-fx-background-color: red;" text="Supprimer commande"
                                textAlignment="CENTER" textFill="WHITE" wrapText="true">
                            <graphic>
                                <FontAwesomeIconView fill="WHITE" glyphName="REMOVE"/>
                            </graphic>
                            <HBox.margin>
                                <Insets left="15.0"/>
                            </HBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                    </children>
                    <GridPane.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </GridPane.margin>
                    <padding>
                        <Insets left="5.0" right="5.0"/>
                    </padding>
                </HBox>
            </children>
            <stylesheets>
                <URL value="@../css/base.css"/>
                <URL value="@../css/management.css"/>
            </stylesheets>
        </GridPane>
    </center>
</BorderPane>

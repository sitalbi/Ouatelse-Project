<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0"
            minWidth="800.0" prefHeight="600.0" prefWidth="1006.0" style="-fx-background-color: #242e41;"
            xmlns="http://javafx.com/javafx/15.0.1" fx:controller="fr.s4e2.ouatelse.controllers.HomeController">
    <top>
        <MenuBar fx:id="menuBar" style="-fx-background-color: #242e41;" stylesheets="@../css/base.css"
                 BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="Fichier">
                <MenuItem id="menuBarFilePreferences" mnemonicParsing="false" onAction="#onPreferences"
                          text="Préférences"/>
                <MenuItem id="menuBarFileQuit" mnemonicParsing="false" onAction="#onQuit" text="Quitter"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Aide">
                <MenuItem id="menuBarHelpAbout" mnemonicParsing="false" onAction="#onAbout" text="À propos"/>
            </Menu>
        </MenuBar>
    </top>
    <bottom>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" styleClass="footer">
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
            <Label maxHeight="1.7976931348623157E308"
                   text="Copyright © Ouatelse. All rights reserved." textFill="WHITE" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="11.0"/>
                </font>
            </Label>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Version ${project.version}" textFill="WHITE" HBox.hgrow="NEVER"/>
        </HBox>
    </bottom>
    <left>
        <ScrollPane fx:id="scrollPanel" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxWidth="-Infinity"
                    minWidth="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="552.0" prefWidth="300.0"
                    style="-fx-padding: 0; -fx-background-color: #242e41;" styleClass="left-container"
                    BorderPane.alignment="CENTER">
            <VBox fx:id="verticalButtonsBar" alignment="TOP_CENTER" maxHeight="-Infinity" minHeight="-Infinity"
                  prefHeight="552.0" prefWidth="250.0" style="-fx-background-color: #242e41;"
                  styleClass="left-container">
            </VBox>
        </ScrollPane>
    </left>
    <right>
        <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="552.0" prefWidth="300.0"
              BorderPane.alignment="CENTER">
            <Pane prefHeight="10000.0" prefWidth="175.0" styleClass="right-container"/>
            <JFXButton onMouseClicked="#onDisconnectClick" prefWidth="1000.0"
                       style="-fx-background-color: red; -fx-border-color: red;" text="Déconnexion"
                       textAlignment="CENTER" textFill="WHITE" wrapText="true">
                <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="SIGN_OUT" size="18.0"/>
                </graphic>
                <font>
                    <Font size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </JFXButton>
        </VBox>
    </right>
    <center>
        <GridPane alignment="CENTER" styleClass="content" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="154.0" minWidth="10.0" prefWidth="57.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="342.0" minWidth="10.0"
                                   prefWidth="342.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="121.0" minWidth="10.0" prefWidth="49.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="103.0" minHeight="10.0" prefHeight="102.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="270.0" minHeight="10.0" prefHeight="190.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="283.0" minHeight="10.0" prefHeight="260.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="10000.0" text="Accueil"
                   textAlignment="CENTER" textFill="WHITE" wrapText="true" GridPane.columnIndex="1">
                <font>
                    <Font size="32.0"/>
                </font>
            </Label>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                       GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Image url="@../images/ouatelse_icon.png"/>
            </ImageView>
            <Circle fill="WHITE" opacity="0.45" radius="93.0" stroke="BLACK" GridPane.columnIndex="1"
                    GridPane.rowIndex="1"/>
            <Pane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Label fx:id="roleField" alignment="CENTER" contentDisplay="CENTER" layoutX="-1.0"
                       layoutY="14.0" prefHeight="35.0" prefWidth="344.0" text="{{role}}" textAlignment="CENTER"
                       textFill="WHITE" wrapText="true">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Label id="homeAdminName" fx:id="homeAdminName" alignment="CENTER" contentDisplay="CENTER"
                       layoutX="-4.0" layoutY="75.0" prefHeight="30.0" prefWidth="351.0" text="{{name}}"
                       textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <Label id="homeAdminEmail" fx:id="homeAdminEmail" alignment="CENTER" contentDisplay="CENTER"
                       layoutX="-3.0" layoutY="130.0" prefHeight="30.0" prefWidth="350.0" text="{{email}}"
                       textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
            </Pane>
        </GridPane>
    </center>
    <stylesheets>
        <URL value="@../css/base.css"/>
        <URL value="@../css/home.css"/>
    </stylesheets>
</BorderPane>
